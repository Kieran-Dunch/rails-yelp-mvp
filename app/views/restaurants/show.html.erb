<div class="card">
  <h1>Restaurant Details: <%= @restaurant.name %></h1>
  <h2><%= @restaurant.address %></h2>
  <h2><%= @restaurant.category %> food</h2>
  <ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>: <%= review.rating %> stars</li>
  <% end %>
</div>
  <%= link_to "go back", restaurants_path, class: "btn btn-primary"%>
  <%= link_to "leave a review", new_restaurant_review_path(@restaurant.id), class: "btn btn-primary"%>
